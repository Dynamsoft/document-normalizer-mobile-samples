<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.StartFragment">

    <Button
        android:id="@+id/btn_scan_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scan_edit"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@id/btn_auto_scan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_auto_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/auto_scan"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_scan_edit" />
</androidx.constraintlayout.widget.ConstraintLayout>